#! /usr/bin/perl

if (!$ENV{GOPATH}) {
	print STDERR "import-pages: \$GOPATH not set\n";
	exit 1;	
}

my @packages = `find  $ENV{GOPATH}/src/jam/pages | grep '\.go\$'`;

if (scalar @packages) {
	print "// generated by import-pages\nimport (\n";
	for (@packages) {
		chomp;
		s/$ENV{GOPATH}\/src\///g;
		s/\/[^\/]+go$//;
		print "\t_\"$_\"\n";
	}
	print ")\n"
}
else {
	print STDERR "import-vendors: Nothing found\n";
}
